{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "prettier",
    // "prettier/standard",
    "prettier/react",
    "airbnb",
    "plugin:react/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "parser": "babel-eslint",
  "rules": {
    "react/jsx-one-expression-per-line": [{
      "allow": "single-child"
    }],

    "comma-dangle": ["error", "never"],
    //     // "arrays": "only-multiline",
    //     "arrays": "never",
    //     "objects": "never",
    //     "functions": "never"
    // }],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        // "comma-dangle": ["error", "never"],
        // "comma-dangle": ["error", {
        //     "objects": "never",
        //     "arrays": "never",
        //     "functions": "never"
        // }],
        "parser": "flow"
      }
    ]
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "detect"
    }
  }
}
